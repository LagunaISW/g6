<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_height="fill_parent">

    <include
        android:id="@+id/app_bar"
        layout="@layout/toolbar_events"
        >
    </include>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView2"
        android:background="@drawable/backrepeat"
        android:padding="10dp" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="FESTIVAL DE LA CALACA 2015"
                android:id="@+id/tvNombre"
                android:fontFamily="sans-serif-condensed"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#132357"

                android:layout_margin="3dp"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_gravity="center_horizontal" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="#FFF"
                        android:drawableLeft="@drawable/organiza"
                        android:text="ORGANIZA"
                        android:padding="8dp"
                        android:id="@+id/textView30"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:textColor="#132357"
                        android:layout_marginRight="1dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="Instituto Municipal de Guaymas"
                        android:id="@+id/tvOrganiza"
                        android:background="#FFF"
                        android:padding="8dp"
                        android:gravity="center"
                        android:textColor="#132357"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_gravity="center_horizontal" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="#FFF"
                        android:drawableLeft="@drawable/lugar"
                        android:text="LUGAR"
                        android:padding="8dp"
                        android:id="@+id/textView32"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:textColor="#132357"
                        android:layout_marginRight="1dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="Malecón Turístico"
                        android:id="@+id/tvLugar"
                        android:background="#FFF"
                        android:padding="8dp"

                        android:gravity="center"
                        android:textColor="#132357"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="#FFF"
                        android:drawableLeft="@drawable/fecha"
                        android:text="FECHA"
                        android:padding="8dp"
                        android:id="@+id/textView34"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#132357"
                        android:layout_marginRight="1dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="2016-02-04"
                        android:id="@+id/tvFecha"
                        android:background="#FFF"
                        android:padding="5dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:layout_marginRight="1dp"
                        android:gravity="center"
                        android:textColor="#132357"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="#FFF"
                        android:drawableLeft="@drawable/hora"
                        android:text="HORA"
                        android:padding="8dp"
                        android:id="@+id/textView36"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#132357"
                        android:layout_marginRight="1dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="5:00 PM"
                        android:id="@+id/tvHora"
                        android:background="#FFF"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textColor="#132357"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFF"
                    android:padding="8dp"
                    android:layout_marginBottom="1dp" >


                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Evento Deportivo"
                        android:padding="3dp"
                        android:textColor="#132357"
                        android:id="@+id/tvTipoEvento" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="CONTACTO"
                        android:textStyle="bold"
                        android:padding="3dp"
                        android:textColor="#132357"
                        android:id="@+id/textView1" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="C. Oscar Rodríguez Arguelles\nDirector Instituto Municipal del Deporte"
                        android:padding="3dp"
                        android:textColor="#132357"
                        android:id="@+id/tvContacto" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerInside"
                        android:layout_marginTop="10dp"
                        android:id="@+id/imgFotoEvento" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </ScrollView>



</LinearLayout>