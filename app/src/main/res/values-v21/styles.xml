<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarBarCustomTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="action_bar_theme" parent="@style/AppTheme">
        <item name="android:background">#b3000000</item>
        <item name="android:titleTextStyle">@string/app_name</item>
    </style>

    <style name="btnmorado">
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:elevation">1dp</item>
        <item name="android:translationZ">1dp</item>
        <item name="android:background">@drawable/btn_morado</item>
        <item name="android:textSize">25dp</item>
    </style>


    <style name="campo">
        <item name="android:textColor">#8F8F8F</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:background">@drawable/campo_blanco</item>
        <item name="android:textSize">25dp</item>
    </style>

</resources>